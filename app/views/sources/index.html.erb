<% Source.all.each_with_index do |source, index| %>
  <%= '<div class="container">'.html_safe if index % 3 == 0 %>
  <%= '<div class="row">'.html_safe if index % 3 == 0 %>
  <div class="col-xs-4">
    <h3><%= source.name %></h3>
    <p>
      <% source.get_feed.items.first(10).each do |item| %>
      <a href="<%= item.link %>" target="_blank" thumb="<%= item.media_thumb_url %>"><%= item.title %></a><hr/>
      <% end %>
    </p>
  </div>
  <%= '</div>'.html_safe if index % 3 == 2 %>
  <%= '</div>'.html_safe if index % 3 == 2 %>

<% end %>